<form>
  <div class="disable-module">
    <label>{{localize 'LOOTABLE.settings.pktcgSettings.disable'}}</label>
    <div class="form-fields">
        <input type="checkbox" name="disablePocketChange" {{#if settings.disablePocketChange}}checked{{/if}}>
    </div>
</div>

  <h2>{{localize 'LOOTABLE.settings.pktcgSettings.amtConfig'}}</h2>
  <div class="form-group">
    <label>{{localize 'LOOTABLE.settings.pktcgSettings.perCoinAmt'}}</label>
    <div class="form-fields">
      <input type="range" name="perCoinAmount" value="{{settings.perCoinAmount}}" min="0.1" max="3" step="0.1">
      <span class="range-value">{{settings.perCoinAmount}}</span>
    </div>
    <p class="notes">{{localize 'LOOTABLE.settings.pktcgSettings.perCoinAmtHint'}}</p>
  </div>
  <div class="form-group">
    <label>{{localize 'LOOTABLE.settings.pktcgSettings.minCoinAmt'}}</label>
    <div class="form-fields">
      <input type="number" name="minCoinAmount" value="{{settings.minCoinAmount}}" step="1" min="0">
    </div>
    <p class="notes">{{localize 'LOOTABLE.settings.pktcgSettings.minCoinAmtHint'}}</p>
  </div>

  <h2>{{localize 'LOOTABLE.settings.pktcgSettings.tokenConfig'}}</h2>
  <div class="form-group">
    <label>{{localize 'LOOTABLE.settings.pktcgSettings.ignoreExistCoin'}}</label>
    <div class="form-fields">
      <input type="checkbox" name="ignoreExistingCoin" {{#if settings.ignoreExistingCoin}}checked{{/if}}>
    </div>
    <p class="notes">{{localize 'LOOTABLE.settings.pktcgSettings.ignoreExistCoinHint'}}</p>
  </div>
  <div class="form-group">
    <label>{{localize 'LOOTABLE.settings.pktcgSettings.allowedTypes'}}</label>
    <div class="form-fields">
      <input type="text" name="allowedCreatureTypes" value="{{settings.allowedCreatureTypes}}">
    </div>
    <p class="notes">{{localize 'LOOTABLE.settings.pktcgSettings.allowedTypesHint'}}</p>
  </div>

  <h2>{{localize 'LOOTABLE.settings.pktcgSettings.ProbabilityConfig'}}</h2>
  <div class="info-message">
    <div>
      <div>
        <i class="fas fa-info-circle"></i>
      </div>
      <div>
        <p>{{localize 'LOOTABLE.settings.pktcgSettings.ProbabilityNote'}}</p>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label>{{localize 'LOOTABLE.settings.pktcgSettings.noCoinChance'}}</label>
    <div class="form-fields">
      <input type="range" name="noCoinChance" value="{{settings.noCoinChance}}" step="0.05" min="0" max="1">
      <span class="range-value">{{settings.noCoinChance}}</span>
    </div>
    <p class="notes">{{localize 'LOOTABLE.settings.pktcgSettings.noCoinChanceHint'}}</p>
  </div>
  <div class="form-group">
    <label>{{localize 'LOOTABLE.settings.pktcgSettings.tenPerChance'}}</label>
    <div class="form-fields">
      <input type="range" name="tenPercentGoldChance" value="{{settings.tenPercentGoldChance}}" step="0.05" min="0" max="1">
      <span class="range-value">{{settings.tenPercentGoldChance}}</span>
    </div>
    <p class="notes">{{localize 'LOOTABLE.settings.pktcgSettings.tenPerChanceHint'}}</p>
  </div>
  <div class="form-group">
    <label>{{localize 'LOOTABLE.settings.pktcgSettings.halfChance'}}</label>
    <div class="form-fields">
      <input type="range" name="halfGoldChance" value="{{settings.halfGoldChance}}" step="0.05" min="0" max="1">
      <span class="range-value">{{settings.halfGoldChance}}</span>
    </div>
    <p class="notes">{{localize 'LOOTABLE.settings.pktcgSettings.halfChanceHint'}}</p>
  </div>
  <div class="form-group">
    <label>{{localize 'LOOTABLE.settings.pktcgSettings.doubleChance'}}</label>
    <div class="form-fields">
      <input type="range" name="doubleCoinChance" value="{{settings.doubleCoinChance}}" step="0.05" min="0" max="1">
      <span class="range-value">{{settings.doubleCoinChance}}</span>
    </div>
    <p class="notes">{{localize 'LOOTABLE.settings.pktcgSettings.doubleChanceHint'}}</p>
  </div>
  <div class="form-group">
    <label>{{localize 'LOOTABLE.settings.pktcgSettings.tripleChance'}}</label>
    <div class="form-fields">
      <input type="range" name="tripleCoinChance" value="{{settings.tripleCoinChance}}" step="0.05" min="0" max="1">
      <span class="range-value">{{settings.tripleCoinChance}}</span>
    </div>
    <p class="notes">{{localize 'LOOTABLE.settings.pktcgSettings.tripleChanceHint'}}</p>
  </div>

  <h2>{{localize 'LOOTABLE.settings.pktcgSettings.MessageConfig'}}</h2>
  <div class="form-group">
    <label>{{localize 'LOOTABLE.settings.pktcgSettings.hidePktcgChatMsg'}}</label>
    <div class="form-fields">
      <input type="checkbox" name="hidePocketChangeChatMsg" {{#if settings.hidePocketChangeChatMsg}}checked{{/if}}>
    </div>
    <p class="notes">{{localize 'LOOTABLE.settings.pktcgSettings.hidePktcgChatMsgHint'}}</p>
  </div>

  <footer>
    <button type="submit" class="button">
        <i class="fas fa-save"></i> {{localize 'LOOTABLE.save'}}
    </button>
  </footer>
</form> 