<form class="random-loot-settings">
  <div class="form-group" style="padding-bottom: 5px;">
    <label>{{localize 'LOOTABLE.RandomLootSettings.DisableRandomLoot.Name'}}</label>
    <div class="form-fields">
      <input type="checkbox" name="disableRandomLoot" {{#if settings.disableRandomLoot}}checked{{/if}}>
    </div>
  </div>

  <h2>{{localize 'LOOTABLE.RandomLootSettings.RolltableByCreatureType'}}</h2>
  
  <style>
    .creature-types-container {
      margin-bottom: 10px;
      border: 1px solid #999;
      border-radius: 5px;
      overflow: hidden;
    }
    .creature-type-header {
      background-color: rgba(0, 0, 0, 0.1);
      padding: 5px;
      font-weight: bold;
      border-bottom: 1px solid #999;
    }
    .creature-type-header .header-row {
      display: grid;
      grid-template-columns: 70px 1fr 1fr 1fr 1fr 120px;
      align-items: center;
      gap: 5px;
    }
    .creature-type-entry {
      border-bottom: 1px solid #ddd;
      margin: 0 !important;
      padding: 5px;
    }
    .creature-type-entry:last-child {
      border-bottom: none;
    }
    .creature-type-entry .entry-row {
      display: grid;
      grid-template-columns: 70px 1fr 1fr 1fr 1fr 120px;
      align-items: center;
      gap: 5px;
    }
    .action-button {
      width: 28px;
      height: 28px;
      padding: 0;
      margin: 0 2px;
    }
    .order-buttons {
      display: flex;
      justify-content: center;
    }
    .action-buttons {
      display: flex;
      justify-content: center;
    }
    .text-center {
      text-align: center;
    }
    .remove-creature-type i {
      color: #c53131;
    }
    .remove-creature-type:hover i {
      color: #ff0000;
    }
  </style>
  
  <div class="creature-types-container">
    <div class="creature-type-header">
      <div class="header-row">
        <div class="text-center">{{localize 'LOOTABLE.RandomLootSettings.ColumnHeaders.Order'}}</div>
        <div>{{localize 'LOOTABLE.RandomLootSettings.ColumnHeaders.Type'}}</div>
        <div>{{localize 'LOOTABLE.RandomLootSettings.ColumnHeaders.Subtype'}}</div>
        <div>{{localize 'LOOTABLE.RandomLootSettings.ColumnHeaders.CRRange'}}</div>
        <div>{{localize 'LOOTABLE.RandomLootSettings.ColumnHeaders.Table'}}</div>
        <div class="text-center">{{localize 'LOOTABLE.RandomLootSettings.ColumnHeaders.Actions'}}</div>
      </div>
    </div>
    {{#each creatureTypes}}
    <div class="form-group creature-type-entry" data-index="{{this.index}}">
      <div class="entry-row">
        <div class="order-buttons">
          <button type="button" class="action-button move-up" {{#if @first}}disabled{{/if}}>
            <i class="fas fa-arrow-up"></i>
          </button>
          <button type="button" class="action-button move-down" {{#if @last}}disabled{{/if}}>
            <i class="fas fa-arrow-down"></i>
          </button>
        </div>
        <div>{{this.type}}</div>
        <div>{{this.subtype}}</div>
        <div>CR {{this.crRange.[0]}}-{{this.crRange.[1]}}</div>
        <div>{{this.tableName}}</div>
        <div class="action-buttons">
          <button type="button" class="action-button select-table" 
                  data-creature-type="{{this.type}}" 
                  data-creature-subtype="{{this.subtype}}" 
                  data-cr-range-start="{{this.crRange.[0]}}" 
                  data-cr-range-end="{{this.crRange.[1]}}"
                  title="{{localize 'LOOTABLE.RandomLootSettings.TableSelector.Title'}}">
            <i class="fas fa-table"></i>
          </button>
          <button type="button" class="action-button edit-creature-type" 
                  data-creature-type="{{this.type}}" 
                  data-creature-subtype="{{this.subtype}}" 
                  data-cr-range-start="{{this.crRange.[0]}}" 
                  data-cr-range-end="{{this.crRange.[1]}}"
                  title="{{localize 'LOOTABLE.RandomLootSettings.EditCreatureType.Title'}}">
            <i class="fas fa-edit"></i>
          </button>
          <button type="button" class="action-button remove-creature-type" 
                  data-creature-type="{{this.type}}" 
                  data-creature-subtype="{{this.subtype}}" 
                  data-cr-range-start="{{this.crRange.[0]}}" 
                  data-cr-range-end="{{this.crRange.[1]}}"
                  title="{{localize 'LOOTABLE.RandomLootSettings.RemoveCreatureType.Title'}}">
            <i class="fas fa-trash"></i>
          </button>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  <div class="form-group">
    <button type="button" class="add-creature-type">
      <i class="fas fa-plus"></i> {{localize 'LOOTABLE.RandomLootSettings.AddCreatureType.Title'}}
    </button>
  </div>

  <h2>{{localize 'LOOTABLE.RandomLootSettings.MessageConfig'}}</h2>
  <div class="form-group" style="padding-bottom: 5px;">
    <label>{{localize 'LOOTABLE.RandomLootSettings.HideRandomLootChatMsg.Name'}}</label>
    <div class="form-fields">
      <input type="checkbox" name="hideRandomLootChatMsg" {{#if settings.hideRandomLootChatMsg}}checked{{/if}}>
    </div>
    <p class="notes">{{localize 'LOOTABLE.RandomLootSettings.HideRandomLootChatMsg.Hint'}}</p>
  </div>

  <button type="submit"><i class="fas fa-save"></i> {{localize 'LOOTABLE.RandomLootSettings.SaveChanges'}}</button>
</form>
